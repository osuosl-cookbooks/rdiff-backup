# rdiff-backup crontab managed by Chef. Changes will be overwritten.

<% if @mailto -%>
MAILTO=<%= @mailto %>
<% end -%>

# Distribute jobs between <%= @shour %>:00 and <%= @ehour %>:00.
<% @jobs.each do |job| -%>
<%= job['minute'].to_int %> <%= job['hour'].to_int %> * * * <%= @suser %> <%= "/home/#{@suser}/scripts/#{job['name']}" %>
<% end -%>
